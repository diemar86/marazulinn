{{ attach_library('marazul/marazul') }}

<div class="page-wrapper">

<section class="hero-decameron" role="region" aria-label="Banner principal">

  <div class="hero-decameron__bg" aria-hidden="true">
    {{ page.hero }} {# aquí cae Home hero (Views) #}
  </div>

  <div class="hero-decameron__overlay" aria-hidden="true"></div>

  <header class="hero-header navbar navbar-expand-lg">
    <div class="container hero-header__inner">
      <div class="hero-header__brand">
        {{ page.header }}
      </div>

      {% if page.primary_menu %}
        <button class="navbar-toggler hero-header__toggler" type="button"
          data-bs-toggle="collapse" data-bs-target="#mainMenu"
          aria-controls="mainMenu" aria-expanded="false" aria-label="Abrir menú">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse hero-header__menu" id="mainMenu">
          <div class="hero-header__menu-inner">
            {{ page.primary_menu }}
          </div>
        </div>
      {% endif %}
    </div>
  </header>

  <div class="hero-decameron__booking container">
     <div class="home-hero__booking">
  {% include '@marazul/components/booking-bar.html.twig' with { action_url: '/form/reservas' } %}
    </div>

  </div>

</section>



  

  {% if page.notifications %}
    <div class="site-notifications">
      {{ page.notifications }}
    </div>
  {% endif %}

  <main class="site-main">
    {% if page.home_content %}
      <div class="home-content-wrapper">
        {{ page.home_content }}
      </div>
    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="site-footer">
      {{ page.footer }}
    </footer>
  {% endif %}

  <a href="https://wa.me/573233074408?text=Hola%20quiero%20informaci%C3%B3n%20sobre%20el%20Hotel%20Mar%20Azul%20Inn"
     class="wa-floating-btn"
     target="_blank"
     rel="noopener"
     aria-label="Chatear por WhatsApp">
    WhatsApp
  </a>

</div>